<launch>
    <!-- Lancer SUMO avec la configuration et la connexion TraCI -->
    <cmd>
        sumo -c ../sumo/traci.sumocfg --remote-port 9999
    </cmd>

    <!-- Paramètres supplémentaires pour Veins -->
    <node name="TraCIScenarioManager" type="TraCIScenarioManagerLaunchd" enabled="true">
        <param name="host" value="localhost"/>
        <param name="port" value="9999"/>
        <param name="sumoConfig" value="../sumo/traci.sumocfg"/>
        <param name="updateInterval" value="1s"/> <!-- Intervalle de mise à jour -->
        <param name="moduleType" value="Car"/> <!-- Type de module pour chaque véhicule -->
        <param name="seed" value="42"/> <!-- Exemple de seed pour la simulation -->
        <param name="autoShutdown" value="true"/> <!-- Arrêt automatique après la simulation -->
    </node>
</launch>
